# Global variables for the stack
KAFKA_SERVER=12.34.56.67:9092
KAFKA_DEFAULT_SET_TIMEOUT=5000
NODE_ENV=production


# CUSTOMER MICRO SERVICE
## Database configuration for Customers service
CUS_DB_HOST=api-clients-db
CUS_DB_PORT=5433
CUS_DB_USER=db-user-customers
CUS_DB_PASSWORD=db-password-customers
CUS_DB_NAME=clients-db

### Application configuration for Customers service
CUS_APP_DATABASE_URL=postgres://${CUS_DB_USER}:${CUS_DB_PASSWORD}@${CUS_DB_HOST}:${CUS_DB_PORT}/${CUS_DB_NAME}
CUS_APP_PORT=3001



# ORDER MICRO SERVICE
## Database configuration for Orders service
ORD_DB_HOST=api-orders-db
ORD_DB_PORT=5434
ORD_DB_USER=db-user-orders
ORD_DB_PASSWORD=db-password-orders
ORD_DB_NAME=orders-db

### Application configuration for Orders service
ORD_APP_DATABASE_URL=postgres://${ORD_DB_USER}:${ORD_DB_PASSWORD}@${ORD_DB_HOST}:${ORD_DB_PORT}/${ORD_DB_NAME}
