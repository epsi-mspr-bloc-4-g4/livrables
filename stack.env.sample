PRO_DB_PORT=5435
PRO_DB_USER=db-user-products
PRO_DB_PASSWORD=db-password-products
PRO_DB_NAME=products-db

### Application configuration for Products service
PRO_APP_DATABASE_URL=postgres://${PRO_DB_USER}:${PRO_DB_PASSWORD}@${PRO_DB_HOST}:${PRO_DB_PORT}/${PRO_DB_NAME}
